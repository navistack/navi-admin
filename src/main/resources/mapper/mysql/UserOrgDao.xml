<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.navistack.admin.modules.common.dao.UserOrgDao">
    <select id="select" resultType="org.navistack.admin.modules.common.entity.UserOrg">
        SELECT *
          FROM user_org
        <where>
            <if test="id != null">AND id = #{id}</if>
            <if test="userId != null">AND user_id = #{userId}</if>
            <if test="orgId != null">AND org_id = #{orgId}</if>
        </where>
    </select>

    <select id="count" resultType="java.lang.Long">
        SELECT COUNT(*)
        FROM user_org
        <where>
            <if test="id != null">AND id = #{id}</if>
            <if test="userId != null">AND user_id = #{userId}</if>
            <if test="orgId != null">AND org_id = #{orgId}</if>
        </where>
    </select>

    <select id="selectWithPageable" resultType="org.navistack.admin.modules.common.entity.UserOrg">
        SELECT *
          FROM user_org
        <where>
            <if test="query.id != null">AND id = #{query.id}</if>
            <if test="query.userId != null">AND user_id = #{query.userId}</if>
            <if test="query.orgId != null">AND org_id = #{query.orgId}</if>
        </where>
        <trim prefix="ORDER BY" suffixOverrides=",">
            <if test="pageable != null and pageable.sort != null and pageable.sort.orders != null and !pageable.sort.orders.isEmpty()">
                <foreach item="order" collection="pageable.sort.orders" separator=",">
                    <choose>
                        <when test="order.property == 'id'">id</when>
                        <when test="order.property == 'userId'">user_id</when>
                        <when test="order.property == 'orgId'">org_id</when>
                        <otherwise>id</otherwise>
                    </choose>
                    <choose>
                        <when test="order.ascending">ASC</when>
                        <otherwise>DESC</otherwise>
                    </choose>
                </foreach>
            </if>
        </trim>
         LIMIT #{pageable.pageSize} OFFSET #{pageable.offset}
    </select>

    <select id="selectOne" resultType="org.navistack.admin.modules.common.entity.UserOrg">
        SELECT *
        FROM user_org
        <where>
            <if test="id != null">AND id = #{id}</if>
            <if test="userId != null">AND user_id = #{userId}</if>
            <if test="orgId != null">AND org_id = #{orgId}</if>
        </where>
    </select>

    <select id="selectOneById" resultType="org.navistack.admin.modules.common.entity.UserOrg">
        SELECT *
          FROM user_org
         WHERE id = #{id}
    </select>

    <insert id="insert">
        INSERT INTO user_org
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="userId != null">user_id,</if>
            <if test="orgId != null">org_id,</if>
            <if test="createdAt != null">created_at,</if>
            <if test="createdBy != null">created_by,</if>
        </trim>
        <trim prefix="VALUES(" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="userId != null">#{userId},</if>
            <if test="orgId != null">#{orgId},</if>
            <if test="createdAt != null">#{createdAt},</if>
            <if test="createdBy != null">#{createdBy},</if>
        </trim>
    </insert>

    <update id="updateById">
        UPDATE user_org
        <set>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="orgId != null">org_id = #{orgId},</if>
            <if test="updatedAt != null">#{updatedAt},</if>
            <if test="updatedBy != null">#{updatedBy},</if>
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <delete id="deleteById">
        DELETE
          FROM user_org
         WHERE id = #{id}
