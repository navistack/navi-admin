<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.navistack.admin.modules.common.dao.DictionaryItemDao">
    <select id="selectAll" resultType="org.navistack.admin.modules.common.entity.DictionaryItem">
        SELECT *
          FROM dictionary_item
    </select>

    <select id="select" resultType="org.navistack.admin.modules.common.entity.DictionaryItem">
        SELECT *
          FROM dictionary_item
        <where>
            <if test="id != null">AND id = #{id}</if>
            <if test="code != null and !code.isEmpty()">AND code = #{code}</if>
            <if test="name != null and !name.isEmpty()">AND name LIKE #{name} '%'</if>
            <if test="dictionaryCode != null and !dictionaryCode.isEmpty()">AND dictionary_code = #{dictionaryCode}</if>
        </where>
    </select>

    <select id="count" resultType="java.lang.Long">
        SELECT COUNT(*)
        FROM dictionary_item
        <where>
            <if test="id != null">AND id = #{id}</if>
            <if test="code != null and !code.isEmpty()">AND code = #{code}</if>
            <if test="name != null and !name.isEmpty()">AND name LIKE #{name} '%'</if>
            <if test="dictionaryCode != null and !dictionaryCode.isEmpty()">AND dictionary_code = #{dictionaryCode}</if>
        </where>
    </select>

    <select id="selectWithPageable" resultType="org.navistack.admin.modules.common.entity.DictionaryItem">
        SELECT *
          FROM dictionary_item
        <where>
            <if test="query.id != null">AND id = #{query.id}</if>
            <if test="query.code != null and !query.code.isEmpty()">AND it_key = #{code}</if>
            <if test="query.name != null and !query.name.isEmpty()">AND name LIKE #{query.name} '%'</if>
            <if test="query.dictionaryCode != null and !query.dictionaryCode.isEmpty()">AND dictionary_code = #{query.dictionaryCode}</if>
        </where>
        <if test="pageable != null">
            <trim prefix="ORDER BY" suffixOverrides=",">
                <if test="pageable.sort != null and pageable.sort.orders != null and !pageable.sort.orders.isEmpty()">
                    <foreach item="order" collection="pageable.sort.orders" separator=",">
                        <choose>
                            <when test="order.property == 'code'">code</when>
                            <when test="order.property == 'dictionaryCode'">dictionaryCode</when>
                            <otherwise>id</otherwise>
                        </choose>
                        <choose>
                            <when test="order.ascending">ASC</when>
                            <otherwise>DESC</otherwise>
                        </choose>
                    </foreach>
                </if>
            </trim>
            <trim prefix="LIMIT">
                #{pageable.pageSize}
            </trim>
            <trim prefix="OFFSET">
                #{pageable.offset}
            </trim>
        </if>
    </select>

    <select id="selectOne" resultType="org.navistack.admin.modules.common.entity.DictionaryItem">
        SELECT *
        FROM dictionary_item
        <where>
            <if test="id != null">AND id = #{id}</if>
            <if test="code != null and !code.isEmpty()">AND code = #{code}</if>
            <if test="name != null and !name.isEmpty()">AND name LIKE #{name} '%'</if>
            <if test="dictionaryCode != null and !dictionaryCode.isEmpty()">AND dictionary_code = #{dictionaryCode}</if>
        </where>
    </select>

    <select id="selectOneById" resultType="org.navistack.admin.modules.common.entity.DictionaryItem">
        SELECT *
          FROM dictionary_item
         WHERE id = #{id}
    </select>

    <insert id="insert">
        INSERT INTO dictionary_item
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="code != null and !code.isEmpty()">code,</if>
            <if test="name != null and !name.isEmpty()">name,</if>
            <if test="dictionaryCode != null and !dictionaryCode.isEmpty()">dictionary_code,</if>
            <if test="createdAt != null">created_at,</if>
            <if test="createdBy != null">created_by,</if>
            <if test="remarks != null and !remarks.isEmpty()">remarks,</if>
        </trim>
        <trim prefix="VALUES(" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="code != null and !code.isEmpty()">#{code},</if>
            <if test="name != null and !name.isEmpty()">#{name},</if>
            <if test="dictionaryCode != null and !dictionaryCode.isEmpty()">#{dictionaryCode},</if>
            <if test="createdAt != null">#{createdAt},</if>
            <if test="createdBy != null">#{createdBy},</if>
            <if test="remarks != null and !remarks.isEmpty()">#{remarks},</if>
        </trim>
    </insert>

    <update id="updateById">
        UPDATE dictionary_item
        <set>
            <if test="code != null and !code.isEmpty()">code = #{code},</if>
            <if test="name != null and !name.isEmpty()">name = #{name},</if>
            <if test="dictionaryCode != null and !dictionaryCode.isEmpty()">dictionary_code = #{dictionaryCode},</if>
            <if test="updatedAt != null">#{updatedAt},</if>
            <if test="updatedBy != null">#{updatedBy},</if>
            <if test="remarks != null and !remarks.isEmpty()">remarks = #{remarks},</if>
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <delete id="deleteById">
        DELETE
          FROM dictionary_item
         WHERE id = #{id}
    </delete>
</mapper>
