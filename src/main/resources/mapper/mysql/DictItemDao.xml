<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.navistack.admin.modules.common.dao.DictItemDao">
    <select id="selectAll" resultType="org.navistack.admin.modules.common.entity.DictItem">
        SELECT *
          FROM dict_item
    </select>

    <select id="select" resultType="org.navistack.admin.modules.common.entity.DictItem">
        SELECT *
          FROM dict_item
        <where>
            <if test="id != null">AND id = #{id}</if>
            <if test="name != null and !name.isEmpty()">AND name LIKE #{name} '%'</if>
            <if test="itKey != null and !itKey.isEmpty()">AND it_key = #{itKey}</if>
            <if test="dictCode != null and !dictCode.isEmpty()">AND dict_code = #{dictCode}</if>
        </where>
    </select>

    <select id="count" resultType="java.lang.Long">
        SELECT COUNT(*)
        FROM dict_item
        <where>
            <if test="id != null">AND id = #{id}</if>
            <if test="name != null and !name.isEmpty()">AND name LIKE #{name} '%'</if>
            <if test="itKey != null and !itKey.isEmpty()">AND it_key = #{itKey}</if>
            <if test="dictCode != null and !dictCode.isEmpty()">AND dict_code = #{dictCode}</if>
        </where>
    </select>

    <select id="selectWithPageable" resultType="org.navistack.admin.modules.common.entity.DictItem">
        SELECT *
          FROM dict_item
        <where>
            <if test="query.id != null">AND id = #{query.id}</if>
            <if test="query.name != null and !query.name.isEmpty()">AND name LIKE #{query.name} '%'</if>
            <if test="query.itKey != null and !query.itKey.isEmpty()">AND it_key = #{query.itKey}</if>
            <if test="query.dictCode != null and !query.dictCode.isEmpty()">AND dict_code = #{query.dictCode}</if>
        </where>
        <trim prefix="ORDER BY" suffixOverrides=",">
            <if test="pageable != null and pageable.sort != null and pageable.sort.orders != null and !pageable.sort.orders.isEmpty()">
                <foreach item="order" collection="pageable.sort.orders" separator=",">
                    <choose>
                        <when test="order.property == 'id'">id</when>
                        <when test="order.property == 'itKey'">it_key</when>
                        <when test="order.property == 'dictCode'">dictCode</when>
                        <otherwise>id</otherwise>
                    </choose>
                    <choose>
                        <when test="order.ascending">ASC</when>
                        <otherwise>DESC</otherwise>
                    </choose>
                </foreach>
            </if>
        </trim>
         LIMIT #{pageable.pageSize} OFFSET #{pageable.offset}
    </select>

    <select id="selectOne" resultType="org.navistack.admin.modules.common.entity.DictItem">
        SELECT *
        FROM dict_item
        <where>
            <if test="id != null">AND id = #{id}</if>
            <if test="name != null and !name.isEmpty()">AND name LIKE #{name} '%'</if>
            <if test="itKey != null and !itKey.isEmpty()">AND it_key = #{itKey}</if>
            <if test="dictCode != null and !dictCode.isEmpty()">AND dict_code = #{dictCode}</if>
        </where>
    </select>

    <select id="selectOneById" resultType="org.navistack.admin.modules.common.entity.DictItem">
        SELECT *
          FROM dict_item
         WHERE id = #{id}
    </select>

    <insert id="insert">
        INSERT INTO dict_item
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="name != null and !name.isEmpty()">name,</if>
            <if test="itKey != null and !itKey.isEmpty()">it_key,</if>
            <if test="itValue != null and !itValue.isEmpty()">it_value,</if>
            <if test="remarks != null and !remarks.isEmpty()">remarks,</if>
            <if test="dictCode != null and !dictCode.isEmpty()">dict_code,</if>
            <if test="createdAt != null">created_at,</if>
            <if test="createdBy != null">created_by,</if>
        </trim>
        <trim prefix="VALUES(" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="name != null and !name.isEmpty()">#{name},</if>
            <if test="itKey != null and !itKey.isEmpty()">#{itKey},</if>
            <if test="itValue != null and !itValue.isEmpty()">#{itValue},</if>
            <if test="remarks != null and !remarks.isEmpty()">#{remarks},</if>
            <if test="dictCode != null and !dictCode.isEmpty()">#{dictCode},</if>
            <if test="createdAt != null">#{createdAt},</if>
            <if test="createdBy != null">#{createdBy},</if>
        </trim>
    </insert>

    <update id="updateById">
        UPDATE dict_item
        <set>
            <if test="name != null and !name.isEmpty()">name = #{name},</if>
            <if test="itKey != null and !itKey.isEmpty()">it_key = #{itKey},</if>
            <if test="itValue != null and !itValue.isEmpty()">it_value = #{itValue},</if>
            <if test="remarks != null and !remarks.isEmpty()">remarks = #{remarks},</if>
            <if test="dictCode != null and !dictCode.isEmpty()">dict_code = #{dictCode},</if>
            <if test="updatedAt != null">#{updatedAt},</if>
            <if test="updatedBy != null">#{updatedBy},</if>
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <delete id="deleteById">
        DELETE
          FROM dict_item
         WHERE id = #{id}
    </delete>
</mapper>
